{
  "version": 2,
  "builds": [
    {
      "src": "django_project/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.11",
        "buildCommand": "bash build_files.sh",
        "installCommand": "pip install -r requirements.txt",
        "outputDirectory": "staticfiles"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "django_project/wsgi.py"
    }
  ],
  "env": {
    "PYTHONPATH": "/vercel/path0"
  },
  "build": {
    "env": {
      "ENABLE_PIP_INSTALL": "true"
    },
    "commands": [
      "apt-get update",
      "apt-get install -y libxml2-dev libxslt1-dev"
    ]
  }
}